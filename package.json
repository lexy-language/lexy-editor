  "private": true,
  "proxy": "https://localhost:7260",
  "type": "module",
  "dependencies": {
    "@codeium/react-code-editor": "^1.0.12",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@monaco-editor/react": "^4.6.0",
    "@mui/icons-material": "^6.3.0",
    "@mui/material": "^6.3.0",
    "@mui/x-date-pickers": "^7.23.6",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "lexy": "file:libs/lexy-compiler-v0.0.92.tgz",
    "moment": "^2.30.1",
    "monaco-editor": "^0.36.1",
    "react": "^18.3.1",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.3",
    "react-router-dom": "^6.28.1",
    "react-scripts": "^5.0.1",
    "remark-gfm": "^4.0.0",
    "split-pane-react": "^0.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "prestart": "node --loader ts-node/esm ./src/aspnetcore-https.ts && node --loader ts-node/esm ./src/aspnetcore-react.ts",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "update-lexy": "cd ../lexy-typescript/ && version=$(npm version patch) && tsc && yarn pack && cd ../lexy-editor/src/ && rm -r -f node_modules/lexy && rm -r -f node_modules/.cache && cp ../../lexy-typescript/lexy-compiler-${version}.tgz ../libs && yarn add lexy@file:libs/lexy-compiler-${version}.tgz",
    "update-specifications": "cd src/lexy-language && git pull && cd ../../scripts && node update-lexy-language.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.19.130"
  }
}
